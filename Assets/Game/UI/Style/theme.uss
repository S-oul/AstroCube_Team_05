:root {
  --color-bg: #0f1115;
  --color-surface: #181b21;
  --color-text: #e9edf1;
  --color-accent: #62d6ff;

  --space-2: 8px;
  --space-3: 12px;
  --space-4: 16px;
  --radius: 12px;
}

.panel {
  padding: var(--space-4);
  background-color: var(--color-surface);
  border-radius: var(--radius);
}
.text-title { font-size: 28px; font-weight: 700; color: var(--color-text); }
.btn { padding: var(--space-3) var(--space-4); border-radius: var(--radius); }
